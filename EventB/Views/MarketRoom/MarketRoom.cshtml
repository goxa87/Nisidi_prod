@model EventB.ViewModels.MarketRoom.MarketRoomVM
@{
    ViewData["Title"] = "MarketRoom";
    ViewData["Style"] = "MarketRoom.css";
    ViewData["Script"] = "MarketRoom.js";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="top-page-header">ваш личный кабинет</div>

<div class="market-frame flex-hss">
    <div class="lk-left-column">
        <div class="lk-menu-block">
            <div id="lk-kibnet-selector" class="lk-selector selected-selector">Кабинет</div>
            <div id="lk-event-selector" class="lk-selector">События</div>
            <div id="lk-cards-selector" class="lk-selector">Карточки</div>
            <div id="lk-banners-selector" class="lk-selector">Баннеры</div>
        </div>
    </div>
    <div class="right-columnn">
        <div id="lk-kibnet-page" class="lk-page">
            <div class="lk-header">СТАТИСТИКА:</div>
            <div class="info-p">Статус кабинета: @Model.MarketKibnet.MarketState</div>
            <div class="info-p">Баланс: @Model.MarketKibnet.PaymentAccountBalance</div>
            <div class="info-p">Общее количество рекламных компаний: @Model.MarketKibnet.TotalMarcetCompanyCount</div>
        </div>
        <div id="lk-event-page" class="lk-page display-none">
            <div class="lk-header">
                События:
                <span class="lk-info-p">Всего: @Model.Events.Count()</span>
                <span class="lk-info-p">Активных: @Model.Events.Where(e => e.Date > DateTime.Now).Count()</span>
                <span class="lk-info-p">Публичных: @Model.Events.Where(e => e.Type == EventType.Global).Count()</span>
            </div>


            @if (Model.Events.Count() > 0)
            {
                <div class="s-filter-container">
                    <span class="small-label">Фильтр</span>
                    <input id="lk-eve-filter" class="s-filter" /><img src="~/resourses/cancel.png" class="s-filter-clear" id="lk-eve-filter-clear"/>
                </div>

                foreach (var ev in Model.Events)
                {
                <div class="lk-eve-item">
                    <div class="lk-event">
                        <div>
                            @{await Html.RenderPartialAsync("~/Views/Shared/_eventItemPartial.cshtml", ev);}
                        </div>
                        <div class="margin-8px">
                            <input class="kibnet-event-id" type="hidden" value="@ev.EventId" />
                            <div class="action-button lk-event-state">Статус: @ev.Type</div>
                            @if (ev.Type == EventType.Private)
                            {
                                <div class="action-button lk-change-event-status">Сменить статус</div>
                            }
                            <a asp-action="EventEdit" asp-controller="Events" asp-route-eventId="@ev.EventId"><div class="action-button">Редактировать</div></a>
                            <div class="action-button">Статистика</div>
                            <div class="lk-delete-event action-button">Удалить</div>
                        </div>
                    </div>
                    <hr>
                 </div>    
                    
                }
            }
            else
            {
                <p class="info-p">Пока событий нет.</p>
            }
        </div>
        
        <div id="lk-cards-page" class="lk-page display-none">
            <div class="lk-header">Карточки:</div>
            <div class="info-p">Всего: </div>
            <div class="info-p">Активных: </div>
            @if(Model.ListCards == null || Model.ListCards.Count() == 0)
            {
                <div class="info-p">Карточек пока нет.</div>
            }
            else
            {
                foreach(var e in Model.ListCards)
                {
                    <div>@e.AHref</div>
                }
            }

        </div>
        <div id="lk-banners-page" class="lk-page display-none">
            <div class="lk-header">Баннеры:</div>
            <div class="info-p">Всего: </div>
            <div class="info-p">Активных: </div>
        </div>
    </div>
</div>


