@model IEnumerable<EventB.ViewModels.SmallFigure>
@{
    ViewData["Title"] = "SearchFriend";
    ViewData["Style"] = "Friends.css";
    ViewData["Script"] = "Friends.js";

    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "поиск";
}

@if (Model.Count() == 0)
{ 
    <div>Пользователей не найдено</div>
}
<div class="flex-hsbc flex-wrap">
    @foreach (var user in Model)
    {
        await Html.RenderPartialAsync("_smallFigure", user);
    }
</div>

