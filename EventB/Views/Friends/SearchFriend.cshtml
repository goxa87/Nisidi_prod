@model IEnumerable<EventB.ViewModels.FriendsVM.SmallFigureFriendVM>
@{
    ViewData["Title"] = "SearchFriend";
    ViewData["Style"] = "Friends.css";
    ViewData["Script"] = "Friends.js";

    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.Count() == 0)
{ 
    <div>Пользователей не найдено</div>
}
<div class="flex-hsc">
    @foreach (var user in Model)
    {
        await Html.RenderPartialAsync("_smallFigure", user);
    }
</div>

