@model EventBLib.Models.Friend

    <div class="friend-list-container">
        <input type="hidden" value="@Model.UserId" id="friend-entity-id">
        <a asp-action="UserInfo" asp-controller="Friends" asp-route-userId="@Model.UserId">
            <div class="friend-list-img">
                <div class="image-container">
                    <img src="@Model.UserPhoto" class="image-self-back" alt="user" />
                    <img src="@Model.UserPhoto" class="image-self-front" alt="user" />
                    <div class="fr-image-watersign">
                        @if (!Model.IsConfirmed && !Model.FriendInitiator)
                        {
                            <span class="fr-label-text" style="color: #ffcd00">NEW</span>
                        }
                        @if (!Model.IsConfirmed && Model.FriendInitiator)
                        {
                            <span class="fr-label-text">Заявка не подтверждена</span><br>
                        }
                        @if (Model.IsBlocked)
                        {
                            <span class="fr-label-text">ЗАБЛОКРОВАН</span>
                        }
                    </div>
                    
                </div>                
            </div>
        </a>
        <hr>
        <div>
            <input type="hidden" value="@Model.UserId" id="friend-entity-id" />
            <h3 class="min-height-3str central-title">@Model.UserName</h3>
            @if (!Model.IsConfirmed && !Model.FriendInitiator)
            {
                <div class="action-button width100 agree-friend">Принять заявку</div>
            }
            else
            {
                @if (!Model.IsBlocked)
                {
                    <div class="action-button width100 btn-block" id="btn-block">Заблокировать</div>
                }
                else
                {
                    <div class="red-btn-alert width100 btn-block" id="btn-block">Разблокировать</div>
                }
            }

            <a asp-controller="Messages" asp-action="Index" asp-route-opponentId="@Model.UserId"><div class="action-button width100">Сообщение</div></a>

            <div class="action-button width100 delete-friend">Удалить из друзей</div>

        </div>
    </div>