@using CommonServices.Infrastructure.Helpers

@model EventBLib.Models.Event

<div class="eventlist-container  transition-1">
    <a class="event-a flex-vss" asp-controller="Events" asp-action="Details" asp-route-id="@Model.EventId" target="_blank">
        <div class="eventlist-img">
            <div class="image-container">
                <img src="@Model.Image" class="image-self-front" alt="event" />
            </div>
        </div>
        <div class="eventlist-info ">
            <div>
                <h3 class="eve-title ">@Model.Title</h3>
            </div>
            <div>
                <div class="flex-hsbc">
                    <div class="flex-hsc">
                        <span class="material-icons eve-icons">calendar_today</span>
                        <h4 class="eve-time">@Model.Date.ToDateStringmonth(false, " ", false)</h4>
                    </div>

                    <div class="flex-hsc">
                        <span class="material-icons eve-icons">schedule</span>
                        <h4 class="eve-time">@Model.Date.ToString("HH:mm")</h4>
                    </div>
                </div>
                <hr>
            </div>
        </div>
    </a>
</div>
