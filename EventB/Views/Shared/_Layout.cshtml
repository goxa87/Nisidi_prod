<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="Description" content="@ViewData["Description"]">
    <title>Нисиди - @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/@ViewData["Style"]" asp-append-version="true" />
    <link rel="icon" href="~/favicon.ico" />

    <!-- Yandex.Metrika counter -->
    <script type="text/javascript" src="~/js/yandexMetrika.js"></script>
    <noscript><div><img src="https://mc.yandex.ru/watch/82544377" style="position:absolute; left:-9999px;" alt="" /></div></noscript>
    <!-- /Yandex.Metrika counter -->

</head>
<body>
    <a name="sitetop"></a>
    <header>
        <div class="the-container">
            <div class="menu-voider"></div>
            <div id="title-container">
                <a href="/">
                    <div>
                        <h3 class="mm-nisidi">nisidi</h3>
                        <article class="title-container-article">все события твоего города</article>
                    </div>
                </a>

                <div>
                    @{if (User.Identity.IsAuthenticated)
                        {
                            <div id="mm-menu-parent">
                                <div id="mm-account-logo">
                                    <svg xmlns="http://www.w3.org/2000/svg" height="30px" viewBox="0 0 24 24" width="30px" fill="#ffcd00"><path d="M0 0h24v24H0z" fill="none" /><path d="M3 5v14c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2H5c-1.11 0-2 .9-2 2zm12 4c0 1.66-1.34 3-3 3s-3-1.34-3-3 1.34-3 3-3 3 1.34 3 3zm-9 8c0-2 4-3.1 6-3.1s6 1.1 6 3.1v1H6v-1z" /></svg>
                                </div>
                                <div id="mm-menu-container" class="transition-1 display-none">
                                    <ul class="menu-items-container">
                                        <li>
                                            <div class="breakword ">@User.Identity.Name</div>
                                        </li>
                                        <hr />
                                        <li>
                                            <div class="flex-hec">
                                                <div id="mm-li-mypage-th" class="s-star16 display-none">
                                                    <svg xmlns="http://www.w3.org/2000/svg" enable-background="new 0 0 24 24" height="24px" viewBox="0 0 24 24" width="24px" fill="#1b5972"><g><rect fill="none" height="24" width="24" /><path d="M14.43,10l-1.47-4.84c-0.29-0.95-1.63-0.95-1.91,0L9.57,10H5.12c-0.97,0-1.37,1.25-0.58,1.81l3.64,2.6l-1.43,4.61 c-0.29,0.93,0.79,1.68,1.56,1.09L12,17.31l3.69,2.81c0.77,0.59,1.85-0.16,1.56-1.09l-1.43-4.61l3.64-2.6 c0.79-0.57,0.39-1.81-0.58-1.81H14.43z" /></g></svg>
                                                </div>
                                                <a class="menu-link" asp-controller="MyPage" asp-action="Index">Аккаунт</a>
                                            </div>
                                        </li>
                                        <li>
                                            <div class="flex-hec">
                                                <a class="menu-link" asp-controller="MarketRoom" asp-action="MarketRoom">Кабинет</a>
                                            </div>
                                        </li>
                                        <li>
                                            <div class="flex-hec">
                                                <div id="mm-li-users-th" class="display-none">
                                                    <svg xmlns="http://www.w3.org/2000/svg" enable-background="new 0 0 24 24" height="24px" viewBox="0 0 24 24" width="24px" fill="#1b5972"><g><rect fill="none" height="24" width="24" /><path d="M14.43,10l-1.47-4.84c-0.29-0.95-1.63-0.95-1.91,0L9.57,10H5.12c-0.97,0-1.37,1.25-0.58,1.81l3.64,2.6l-1.43,4.61 c-0.29,0.93,0.79,1.68,1.56,1.09L12,17.31l3.69,2.81c0.77,0.59,1.85-0.16,1.56-1.09l-1.43-4.61l3.64-2.6 c0.79-0.57,0.39-1.81-0.58-1.81H14.43z" /></g></svg>
                                                </div>
                                                <a class="menu-link" asp-controller="Friends" asp-action="List">Друзья</a>

                                            </div>
                                        </li>
                                        <li>
                                            <div class="flex-hec">
                                                <div id="mm-li-messages-th" class="display-none">
                                                    <svg xmlns="http://www.w3.org/2000/svg" enable-background="new 0 0 24 24" height="24px" viewBox="0 0 24 24" width="24px" fill="#1b5972"><g><rect fill="none" height="24" width="24" /><path d="M14.43,10l-1.47-4.84c-0.29-0.95-1.63-0.95-1.91,0L9.57,10H5.12c-0.97,0-1.37,1.25-0.58,1.81l3.64,2.6l-1.43,4.61 c-0.29,0.93,0.79,1.68,1.56,1.09L12,17.31l3.69,2.81c0.77,0.59,1.85-0.16,1.56-1.09l-1.43-4.61l3.64-2.6 c0.79-0.57,0.39-1.81-0.58-1.81H14.43z" /></g></svg>
                                                </div>
                                                <a class="menu-link" asp-controller="Messages" asp-action="Index">Сообщения</a>
                                            </div>
                                        </li>

                                        <li>
                                            <div class="flex-hec">
                                                <div id="mm-li-manual-th" class="display-none">
                                                    <svg xmlns="http://www.w3.org/2000/svg" enable-background="new 0 0 24 24" height="24px" viewBox="0 0 24 24" width="24px" fill="#1b5972"><g><rect fill="none" height="24" width="24" /><path d="M14.43,10l-1.47-4.84c-0.29-0.95-1.63-0.95-1.91,0L9.57,10H5.12c-0.97,0-1.37,1.25-0.58,1.81l3.64,2.6l-1.43,4.61 c-0.29,0.93,0.79,1.68,1.56,1.09L12,17.31l3.69,2.81c0.77,0.59,1.85-0.16,1.56-1.09l-1.43-4.61l3.64-2.6 c0.79-0.57,0.39-1.81-0.58-1.81H14.43z" /></g></svg>
                                                </div>
                                                <a class="menu-link" asp-action="Manual" asp-controller="Help">Помощь</a>
                                            </div>
                                        </li>
                                        <hr />
                                        <li>
                                            <div class="flex-hec">
                                                <a class="menu-link" asp-action="Exit" asp-controller="Account">Выйти</a>
                                            </div>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        }
                        else
                        {
                            <a class="title-href" asp-action="Login" asp-controller="Account">Войти</a>
                        }
                    }
                </div>
            </div>
        </div>

    </header>
    <div class="the-container">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <script src="~/js/jquery-3.4.1.min.js"></script>
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/site.js" asp-append-version="true" type="module"></script>
    <script src="~/js/@ViewData["Script"]" asp-append-version="true" type="module"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
