@model EventB.ViewModels.Account.ChangePasswordVM
@{
    ViewData["Style"] = "Account.css";
    ViewData["Script"] = "AccountJs";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
    ViewData["Title"] = "Сменить пароль";
}
    
<div class="acc-form-menu flex-vcc">
    <div class="acc-window">
        <div class="identity-cintainer">
            <form asp-action="ChangePassword" asp-antiforgery="true" method="post">
                <div asp-validation-summary="ModelOnly"></div>
                <label class="form-label" asp-for="OldPassword"></label><br>
                <span asp-validation-for="OldPassword"></span>
                <input class="form-entry-title" type="password" asp-for="OldPassword"><br>

                <label class="form-label" asp-for="NewPassword"></label><br>
                <span asp-validation-for="NewPassword"></span>
                <input class="form-entry-title" type="password" asp-for="NewPassword"><br>

                <label class="form-label" asp-for="ConfirmPassword"></label><br>
                <span asp-validation-for="ConfirmPassword"></span>
                <input class="form-entry-title" type="password" asp-for="ConfirmPassword"><br><br>

                <input class="form-submit" type="submit" value="Изменить"><br>
                <a asp-action="PasswordRecovery"><h5>Забыли пароль</h5></a>
            </form>
        </div>

    </div>
    <a class="acc-width500" href="/">на главную</a>
</div>
        @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
