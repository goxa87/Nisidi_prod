@model List<EventBLib.Models.Event>

@{
    Layout = null;
}

@if (Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">id</th>
                <th scope="col">Заголовок</th>
                <th scope="col">Создан</th>
                <th scope="col">Кем создан</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var eve in Model)
            {
                <tr>
                    <th scope="row">@eve.EventId</th>
                    <td>@eve.Title</td>
                    <td>@eve.CreationDate.ToLongDateString()</td>
                    <td>@eve.Creator.NormalizedUserName</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div>Событий не найдено</div>
}
