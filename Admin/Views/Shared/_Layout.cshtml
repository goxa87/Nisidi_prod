<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>BuilderAdmin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn3.devexpress.com/jslib/20.1.8/css/dx.common.css">
    <link rel="stylesheet" href="https://cdn3.devexpress.com/jslib/20.1.8/css/dx.light.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/@ViewData["Style"]" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container flex-hsbc">
                <div>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Home" asp-action="Statistic">Статистика</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Home" asp-action="FAQ">FAQ</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Events" asp-action="EventList">События</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="CommonUsers" asp-action="List">Пользователи</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Support" asp-action="Tasks">Поддержка</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="AdminUsers" asp-action="List">Админ</a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div>
                    @if (Context?.User?.Identity != null && Context.User.Identity.IsAuthenticated)
                    {
                        <div>
                            @Context?.User?.Identity.Name
                        <a asp-action="Logout" asp-controller="Account">
                            <span class="btn btn-info">Выйти</span>
                        </a>
                    </div>
                }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script type="text/javascript" src="~/js/dx.all.js"></script>
    <script type="text/javascript" src="~/js/dx.messages.ru.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/@ViewData["Script"]" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
